<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/outside">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="350dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="260dp"
            android:id="@+id/traficlight"
            android:orientation="vertical"
            android:layout_marginStart="60dp"
            android:layout_marginTop="73dp"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="89dp"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/traficlightborder">

                <!-- light trafic-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp">

                    <!-- red light-->
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/red_light_blur"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:id="@+id/red">
                    </LinearLayout>

                    <!-- orange light-->
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/orange_light_blur"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:id="@+id/orange">
                    </LinearLayout>

                    <!-- green light-->
                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/green_light_blur"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:id="@+id/green">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scenario1"
            android:text="@string/scenario1"
            android:layout_margin="5dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scenario2"
            android:text="@string/scenario2"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop"
            android:text="@string/stop"
            android:backgroundTint="@color/inactivered"
            android:textColor="@color/white"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>